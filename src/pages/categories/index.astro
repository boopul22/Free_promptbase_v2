---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Filters from "../../components/Filters.astro";
import PromptGrid from "../../components/PromptGrid.astro";
import { CATEGORIES } from "../../categories";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");

// Count posts per category
const categoryCounts = CATEGORIES.map((category) => {
    const count = posts.filter(
        (post) => post.data.category === category.slug,
    ).length;
    return { ...category, count };
});

const totalPrompts = posts.length;
const pageTitle = "Browse All Categories";
const pageDescription =
    "Explore prompts organized by category - find exactly what you're looking for";
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Hero Section with Purple Gradient -->
    <section class="relative pt-16 pb-10 md:pt-20 md:pb-12 px-4 border-b border-border overflow-hidden w-full">
        <!-- Background Glow -->
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[500px] md:w-[700px] h-[250px] md:h-[350px] bg-purple-500/20 blur-[80px] md:blur-[100px] rounded-full pointer-events-none -z-10"></div>

        <div class="max-w-3xl mx-auto text-center">
            <!-- Category Badge -->
            <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full border border-border bg-surface/50 text-xs font-medium text-secondary mb-5">
                <iconify-icon icon="lucide:sparkles" width="14"></iconify-icon>
                {totalPrompts} prompts available
            </div>

            <!-- Heading with Purple Gradient -->
            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-medium tracking-tight mb-4 bg-clip-text text-transparent bg-gradient-to-r from-purple-400 via-purple-300 to-purple-500">
                Browse All Categories
            </h1>

            <!-- Description -->
            <p class="text-sm text-secondary max-w-lg mx-auto leading-relaxed font-light px-4 md:px-0">
                Explore prompts organized by category. Find the perfect prompt for your creative and professional needs.
            </p>
        </div>
    </section>

    <!-- Filter Bar -->
    <Filters />

    <!-- Category Cards Section -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 py-8">
        <!-- Section Header -->
        <div class="mb-6">
            <h2 class="text-xl font-medium text-white mb-1">All Categories</h2>
            <p class="text-secondary text-sm">{categoryCounts.length} categories to explore</p>
        </div>

        <!-- Category Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {
                categoryCounts.map((category) => (
                    <a
                        href={`/category/${category.slug}`}
                        class="group relative flex flex-col justify-between bg-surface/30 border border-border rounded-xl p-5 hover:border-neutral-600 hover:bg-surface/50 active:bg-surface/60 transition-all duration-300 hover:shadow-lg hover:shadow-neutral-900/50 cursor-pointer"
                    >
                        <div>
                            <!-- Header with badges -->
                            <div class="flex items-center justify-between mb-4">
                                <div class="flex items-center gap-2 flex-wrap">
                                    <span class="text-[10px] font-medium px-2 py-0.5 rounded border text-purple-400 border-purple-500/20 bg-purple-500/10">
                                        Category
                                    </span>
                                    <span class="text-[10px] text-neutral-500">
                                        {category.count} prompt{category.count !== 1 ? "s" : ""}
                                    </span>
                                </div>
                                <button
                                    class="text-neutral-500 hover:text-white transition-colors p-2 -m-2"
                                    onclick="event.stopPropagation(); event.preventDefault();"
                                    aria-label="Bookmark category"
                                >
                                    <iconify-icon icon="lucide:bookmark" width="16"></iconify-icon>
                                </button>
                            </div>

                            <!-- Category Name -->
                            <h3 class="text-base font-medium text-white tracking-tight mb-2 group-hover:text-purple-300 transition-colors">
                                {category.name}
                            </h3>

                            <!-- Description -->
                            <p class="text-xs text-secondary leading-relaxed mb-4 line-clamp-2">
                                {category.description}
                            </p>

                            <!-- Icon Preview Box -->
                            <div class="relative bg-black/50 rounded-lg p-3 border border-border group-hover:border-neutral-700 transition-colors mb-4">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-lg bg-purple-900/50 border border-purple-800/50 flex items-center justify-center">
                                        <iconify-icon icon={`lucide:${category.icon}`} width="16" class="text-purple-400"></iconify-icon>
                                    </div>
                                    <code class="text-[10px] font-mono text-neutral-400 block">
                                        Browse {category.name.toLowerCase()} prompts...
                                    </code>
                                </div>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="flex items-center justify-between mt-auto pt-4 border-t border-border/50">
                            <div class="flex items-center gap-2">
                                <div class="w-5 h-5 rounded-full flex items-center justify-center text-[8px] text-white border border-opacity-50 bg-purple-900 border-purple-800">
                                    <iconify-icon icon={`lucide:${category.icon}`} width="10"></iconify-icon>
                                </div>
                                <span class="text-xs text-neutral-400">{category.name}</span>
                            </div>
                            <div class="flex items-center gap-1 text-neutral-500 text-[10px] group-hover:text-white transition-colors">
                                Explore <iconify-icon icon="lucide:arrow-right" width="10"></iconify-icon>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>
    </section>
</BaseLayout>
