---
interface Props {
    username: string;
    heroImage?: string;
}

const { username, heroImage } = Astro.props;

// Generate Instagram profile URL
const instagramUrl = `https://www.instagram.com/${username}/`;
---

<div
    class="creator-credit-card my-8 p-5 rounded-xl bg-surface/50 border border-border hover:border-emerald-500/30 transition-all duration-300"
>
    <div class="flex items-center gap-4">
        <!-- Profile Image or Avatar -->
        <a
            href={instagramUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="relative group shrink-0"
        >
            <div
                class="absolute -inset-0.5 bg-gradient-to-r from-emerald-500 to-sky-500 rounded-full blur opacity-50 group-hover:opacity-100 transition duration-300"
            >
            </div>
            {
                heroImage ? (
                    <img
                        src={heroImage}
                        alt={`@${username}'s profile`}
                        class="relative w-12 h-12 rounded-full object-cover border-2 border-background"
                    />
                ) : (
                    <div class="relative w-12 h-12 rounded-full bg-gradient-to-br from-emerald-500 to-sky-500 flex items-center justify-center border-2 border-background">
                        <span class="text-white text-lg font-bold">
                            {username.charAt(0).toUpperCase()}
                        </span>
                    </div>
                )
            }
        </a>

        <!-- Creator Info -->
        <div class="flex-1 min-w-0">
            <p
                class="text-xs text-neutral-500 uppercase tracking-wider font-medium mb-0.5"
            >
                Original Creator
            </p>
            <a
                href={instagramUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="text-white font-medium hover:text-emerald-400 transition-colors flex items-center gap-2 group"
            >
                <iconify-icon
                    icon="mdi:instagram"
                    width="16"
                    class="text-emerald-400"></iconify-icon>
                <span class="truncate">@{username}</span>
                <iconify-icon
                    icon="lucide:external-link"
                    width="12"
                    class="opacity-0 group-hover:opacity-100 transition-opacity text-neutral-500"
                ></iconify-icon>
            </a>
        </div>

        <!-- View Profile Button -->
        <a
            href={instagramUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 rounded-lg bg-emerald-500/10 border border-emerald-500/30 text-emerald-400 text-sm font-medium hover:bg-emerald-500/20 hover:border-emerald-500/50 transition-all flex items-center gap-2 shrink-0"
        >
            <iconify-icon icon="lucide:user" width="14"></iconify-icon>
            <span class="hidden sm:inline">View Profile</span>
        </a>
    </div>
</div>

<style>
    .creator-credit-card {
        animation: fadeInUp 0.4s ease-out;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(8px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
